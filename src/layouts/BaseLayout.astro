---
/**
 * Base Layout Component
 * Wraps all pages with common HTML structure and SEO meta tags
 * Now includes SEO component for Open Graph and Twitter Cards
 */
import SEO from '../components/SEO.astro';
import type { ImageWithUrl } from '../utils/images/types';

interface Props {
  title: string;
  description: string;
  canonical?: string;
  noindex?: boolean;
  ogImage: ImageWithUrl; // Required from SEO component
  pageType?: 'website' | 'article';
}

const {
  title,
  description,
  canonical,
  noindex = false,
  ogImage,
  pageType = 'website'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <SEO
      title={title}
      description={description}
      canonical={canonical}
      noindex={noindex}
      ogImage={ogImage}
      pageType={pageType}
    />
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>
